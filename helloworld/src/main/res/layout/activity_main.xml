                        android:id="@+id/tn_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营养快线"
                        android:layout_below="@+id/tn_12" />
                   <Button
                        android:id="@+id/tn_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="芬达"
                        android:layout_below="@+id/tn_13" />
