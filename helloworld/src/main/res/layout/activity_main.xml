                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="TextView"/>

                   <Button
                        android:id="@+id/tn_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RideoGroup"
                        android:layout_below="@+id/tn_1" />
                   <Button
                        android:id="@+id/tn_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RideoButton"
                        android:layout_below="@+id/tn_2"
                        android:layout_alignLeft="@+id/tn_4"
                        android:layout_alignStart="@+id/tn_4" />
                   <Button
                        android:id="@+id/tn_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CheakBox"
                        android:layout_below="@+id/tn_3" />
                   <Button
                        android:id="@+id/tn_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="呼啦啦"
                        android:layout_below="@+id/tn_4" />
