                        android:id="@+id/tn_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="纯中纯"
                        android:layout_below="@+id/tn_6" />
                   <Button
                        android:id="@+id/tn_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="百岁山"
                        android:layout_below="@+id/tn_7" />
                   <Button
                        android:id="@+id/tn_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="雪碧"
                        android:layout_below="@+id/tn_8" />
