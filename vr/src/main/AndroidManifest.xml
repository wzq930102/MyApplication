<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jt.base">

    <!-- 使用opengles 2.0 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 允许访问存储卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.jtvr.app.VRApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.jtvr.avtivity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jtvr.vrplaymedia.VrPlayMediaActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            />
        <activity
            android:name="com.jtvr.vrplaymedia.VrImageActivty"
            android:configChanges="keyboardHidden|screenSize|orientation" />
        <activity android:name="com.jtvr.avtivity.MyFragmentToActivity.SettingActivity" />
        <activity android:name="com.jtvr.avtivity.HomeFragmentToActivity.SpecialActivity" />
        <activity android:name="com.jtvr.avtivity.HomeFragmentToActivity.SpecialDetailActivity" />
        <activity android:name="com.jtvr.avtivity.MyFragmentToActivity.LoginActivity" />
        <activity android:name="com.jtvr.avtivity.MyFragmentToActivity.RegisterActivity" />
        <activity android:name="com.jtvr.avtivity.MyFragmentToActivity.ForgetActivity" />
        <activity android:name="com.jtvr.avtivity.MovieMoreActivity" />
        <activity android:name="com.jtvr.avtivity.MyActivity.PersonInfo" />
        <activity android:name="com.jtvr.avtivity.MyActivity.MemberCatogory" />
        <activity android:name="com.jtvr.avtivity.MyActivity.NickNameActivity" />
        <activity android:name="com.jtvr.avtivity.MyActivity.ProfessionActivity" />
        <activity android:name="com.jtvr.avtivity.MyActivity.EmailActivity" />
        <activity android:name="com.jtvr.avtivity.MyActivity.tradingrecord" />
        <activity android:name="com.jtvr.avtivity.MyFragmentToActivity.HistoryActivity" />
        <activity android:name="com.jtvr.avtivity.MyFragmentToActivity.CollectionActivity" />
        <activity android:name="com.jtvr.avtivity.MyFragmentToActivity.SignActivity" />
        <activity android:name="com.jtvr.avtivity.MyFragmentToActivity.AboutActivity" />
        <activity android:name="com.jtvr.avtivity.MyFragmentToActivity.MessageActivity" />
        <activity android:name="com.jtvr.avtivity.MyFragmentToActivity.DownloadActivity" />

        <service
            android:name="com.jtvr.service.DownloadService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name="com.jtvr.service.DownloadAPKService"
            android:enabled="true"
            android:exported="true" />

        <receiver android:name="com.jtvr.service.WifiReceiver">
            <intent-filter>
                <action android:name="android.net.wifi.RSSI_CHANGED" />
                <action android:name="android.net.wifi.STATE_CHANGE" />
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <activity android:name="com.jtvr.avtivity.MyFragmentToActivity.SearchActivity" />
        <activity android:name="com.jtvr.avtivity.MyFragmentToActivity.VIPActivity"></activity>
    </application>

</manifest>