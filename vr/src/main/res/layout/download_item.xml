<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collection_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/collection_item_CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp12"
        android:button="@drawable/checkbox_selector"
        android:checked="false"
        android:gravity="center"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/collection_item_image"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginBottom="@dimen/dp8"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginTop="@dimen/dp8"
        android:layout_toRightOf="@+id/collection_item_CheckBox"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/history_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginTop="@dimen/dp20"
        android:layout_toRightOf="@+id/collection_item_image"
        android:textColor="@color/vr_black"
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/history_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/collection_item_image"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_toRightOf="@+id/collection_item_image"
        android:textColor="@color/vr_bbbbbb"
        android:textSize="@dimen/sp12" />

    <ProgressBar
        android:id="@+id/progressBar_horizontal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignBottom="@+id/collection_item_image"
        android:layout_alignLeft="@+id/history_item_num"
        android:layout_alignStart="@+id/history_item_num"
        android:layout_marginRight="@dimen/dp12" />
</RelativeLayout>