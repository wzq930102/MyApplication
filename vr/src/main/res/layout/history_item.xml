<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/history_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/history_item_image"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginBottom="@dimen/dp8"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginTop="@dimen/dp8"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/history_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginTop="@dimen/dp20"
        android:layout_toRightOf="@+id/history_item_image"
        android:textColor="@color/vr_black"
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/history_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/history_item_image"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_toRightOf="@+id/history_item_image"
        android:textColor="@color/vr_bbbbbb"
        android:textSize="@dimen/sp12" />
</RelativeLayout>