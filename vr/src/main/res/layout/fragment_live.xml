<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/vr_red" />
    <include
        android:id="@+id/liveFragment_title"
        layout="@layout/vrtv_title" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/zhibo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/zhibo"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />

        </LinearLayout>


    </ScrollView>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        tools:context="com.jtvr.fragment.LiveFragment">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/live_recyclerView_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp5"
                    android:background="@color/vr_bg" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/live_recyclerView_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp5"
                    android:background="@color/vr_bg" />

                <RelativeLayout
                    android:id="@+id/liveFragment_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp36">

                    <View
                        android:id="@+id/liveFragment_View"
                        android:layout_width="@dimen/dp4"
                        android:layout_height="@dimen/dp14"
                        android:layout_centerVertical="true"
                        android:background="@color/vr_red" />

                    <TextView
                        android:id="@+id/liveFragment_text"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp36"
                        android:layout_alignLeft="@+id/liveFragment_View"
                        android:layout_marginLeft="@dimen/dp12"
                        android:gravity="center"
                        android:text="热门回看"
                        android:textColor="@color/vr_black"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/liveFragment_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp8"
                        android:drawableRight="@mipmap/common_icon_right"
                        android:gravity="center"
                        android:text="更多"
                        android:textColor="@color/vr_8888"
                        android:textSize="@dimen/sp13" />

                </RelativeLayout>

                <include
                    android:id="@+id/live_item1"
                    layout="@layout/fragment_live_back_item" />

                <include
                    android:id="@+id/live_item2"
                    layout="@layout/fragment_live_back_item" />

                <include
                    android:id="@+id/live_item3"
                    layout="@layout/fragment_live_back_item" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>
</LinearLayout>