<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.andview.refreshview.XRefreshView
        android:id="@+id/homeFragment_refresh"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <com.andview.refreshview.XScrollView
            android:id="@+id/homeFragment_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">
                <!-- 轮播图-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp234">

                    <com.youth.banner.Banner
                        android:id="@+id/home_recommend_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:indicator_drawable_selected="@mipmap/banner_red_selected"
                        app:indicator_drawable_unselected="@mipmap/banner_white_selected"
                        app:indicator_height="8dp"
                        app:indicator_margin="4dp"
                        app:indicator_width="8dp" />
                </RelativeLayout>




                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp5"
                    android:background="@color/vr_bg" />

                <include layout="@layout/homefragment_item1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp5"
                    android:background="@color/vr_bg" />

                <!-- VR直播的横向RecyclerView -->

                <RelativeLayout
                    android:id="@+id/homeFragment_item2_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp36">

                    <View
                        android:id="@+id/homeFragment_item2_View"
                        android:layout_width="@dimen/dp4"
                        android:layout_height="@dimen/dp14"
                        android:layout_centerVertical="true"
                        android:background="@color/vr_f44336" />

                    <TextView
                        android:id="@+id/homeFragment_item2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp36"
                        android:layout_alignLeft="@+id/homeFragment_item2_View"
                        android:layout_marginLeft="@dimen/dp12"
                        android:gravity="center"
                        android:text="最新专题"
                        android:textColor="#FF4081"
                        android:textSize="@dimen/dp14" />

                    <TextView
                        android:id="@+id/homeFragment_item2_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp8"
                        android:drawableRight="@mipmap/common_icon_right"
                        android:gravity="center"
                        android:text="更多"
                        android:textColor="@color/vr_8888"
                        android:textSize="@dimen/sp13" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/homeFragment_item2_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp5"
                    android:background="@color/vr_bg" />

                <!-- 人气榜单 -->
                <RelativeLayout
                    android:id="@+id/homeFragment_item3_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp36">

                    <View
                        android:id="@+id/homeFragment_item3_View"
                        android:layout_width="@dimen/dp4"
                        android:layout_height="@dimen/dp14"
                        android:layout_centerVertical="true"
                        android:background="@color/vr_f44336" />

                    <TextView
                        android:id="@+id/homeFragment_item3_text"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp36"
                        android:layout_alignLeft="@+id/homeFragment_item3_View"
                        android:layout_marginLeft="@dimen/dp12"
                        android:gravity="center"
                        android:text="人气榜单"
                        android:textColor="#FF4081"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/homeFragment_item3_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp8"
                        android:drawableRight="@mipmap/common_icon_right"
                        android:gravity="center"
                        android:text="更多"
                        android:textColor="@color/vr_8888"
                        android:textSize="@dimen/sp13" />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/homeFragment_item3_Layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include
                        android:id="@+id/homeFragment_include1"
                        layout="@layout/item_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <View
                        android:layout_width="@dimen/dp1"
                        android:layout_height="match_parent" />

                    <include
                        android:id="@+id/homeFragment_include2"
                        layout="@layout/item_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/homeFragment_item3_Layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include
                        android:id="@+id/homeFragment_include3"
                        layout="@layout/item_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <View
                        android:layout_width="@dimen/dp1"
                        android:layout_height="match_parent" />

                    <include
                        android:id="@+id/homeFragment_include4"
                        layout="@layout/item_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp5"
                    android:background="@color/vr_bg" />

                <include layout="@layout/homefragment_item4" />
            </LinearLayout>
        </com.andview.refreshview.XScrollView>
    </com.andview.refreshview.XRefreshView>

    <RelativeLayout
        android:id="@+id/homeFragment_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/homeFragment_title"
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:layout_below="@+id/homeFragment_title">

            <ImageView
                android:layout_width="98dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/common_logo_white" />

            <ImageView
                android:id="@+id/fragment_home_search"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/fragment_home_recommend_cd"
                android:layout_toStartOf="@+id/fragment_home_recommend_cd"
                android:src="@mipmap/nav_icon_search" />

            <ImageView
                android:id="@+id/fragment_home_recommend_cd"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/nav_icon_select" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>