<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.jtvr.fragment.Movie_Fragment.Movie_include.MovieHotFragment">

    <com.andview.refreshview.XRefreshView
        android:id="@+id/movieHotFragment_refresh"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">


        <com.andview.refreshview.XScrollView
            android:id="@+id/moviehot_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.youth.banner.Banner
                    android:id="@+id/movie_fragment_hot_Banner"
                    android:layout_width="match_parent"
                    android:layout_height="142dp"
                    app:indicator_drawable_selected="@mipmap/banner_red_selected"
                    app:indicator_drawable_unselected="@mipmap/banner_white_selected"
                    app:indicator_height="8dp"
                    app:indicator_margin="4dp"
                    app:indicator_width="8dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/movie_fragment_hot_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="false" />
                </RelativeLayout>

            </LinearLayout>

        </com.andview.refreshview.XScrollView>
    </com.andview.refreshview.XRefreshView>

</RelativeLayout>
