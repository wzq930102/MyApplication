<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jtvr.avtivity.MyFragmentToActivity.MessageActivity">

    <include layout="@layout/login_register_title" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/message_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        tl:tl_indicator_color="@color/vr_red"
        tl:tl_indicator_corner_radius="1.5dp"
        tl:tl_indicator_height="@dimen/dp3"
        tl:tl_indicator_width="90dp"
        tl:tl_textSelectColor="@color/vr_red"
        tl:tl_tab_space_equal="true"
        tl:tl_textUnselectColor="@color/black" />

    <android.support.v4.view.ViewPager
        android:id="@+id/message_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
