<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/vip_item_parent"
    android:layout_marginLeft="@dimen/dp12"
    android:layout_marginRight="@dimen/dp12"
    android:layout_marginTop="@dimen/dp12"
    android:background="@drawable/shape_vip">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/vip_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/vip_title"
            android:gravity="center"

            android:textColor="@color/vr_black"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/vip_item_num"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_below="@+id/vip_item_title"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/vr_red"
            android:textSize="@dimen/sp18" />

    </RelativeLayout>
</RelativeLayout>