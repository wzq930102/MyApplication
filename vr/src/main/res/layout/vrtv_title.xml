<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp48"
    android:background="@color/vr_red">

    <ImageView
        android:id="@+id/movieFragment_logo"
        android:layout_width="@dimen/dp98"
        android:layout_height="@dimen/dp26"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp12"
        android:src="@mipmap/common_logo_white" />

    <ImageView
        android:id="@+id/movieFragment_select"
        android:layout_width="@dimen/dp22"
        android:layout_height="@dimen/dp22"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp12"
        android:src="@mipmap/nav_icon_select" />

    <ImageView
        android:id="@+id/movieFragment_search"
        android:layout_width="@dimen/dp22"
        android:layout_height="@dimen/dp22"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/movieFragment_select"
        android:src="@mipmap/nav_icon_search" />
</RelativeLayout>