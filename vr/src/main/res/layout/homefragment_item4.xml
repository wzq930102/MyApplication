<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/homeFragment_item4_Layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp36">

        <View
            android:id="@+id/homeFragment_item4_View"
            android:layout_width="@dimen/dp4"
            android:layout_height="@dimen/dp14"
            android:layout_centerVertical="true"
            android:background="@color/vr_f44336" />

        <TextView
            android:id="@+id/homeFragment_item4_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp36"
            android:layout_alignLeft="@+id/homeFragment_item3_View"
            android:layout_marginLeft="@dimen/dp12"
            android:gravity="center"
            android:text="最新应用"
            android:textColor="@color/vr_black"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/homeFragment_item4_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp8"
            android:drawableRight="@mipmap/common_icon_right"
            android:gravity="center"
            android:text="更多"
            android:textColor="@color/vr_8888"
            android:textSize="@dimen/sp13" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeFragment_item4_Layout"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp12"
        android:paddingTop="@dimen/dp12">

        <RelativeLayout
            android:id="@+id/homeFragment_item4_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/homeFragment_item4_game1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/timg1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/homeFragment_item4_game1"
                android:layout_alignParentTop="true"
                android:src="@mipmap/common_icon_mark_vr" />

            <TextView
                android:id="@+id/homeFragment_item4_GameName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/homeFragment_item4_game1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp12"
                android:text="涂鸦骑手"
                android:textColor="@color/vr_1a1a1a"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/homeFragment_item4_download1"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp22"
                android:layout_below="@+id/homeFragment_item4_GameName1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp8"
                android:background="@drawable/live_red_shape"
                android:gravity="center"
                android:text="下载"
                android:textColor="@color/vr_ff5858"
                android:textSize="@dimen/sp12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/homeFragment_item4_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/homeFragment_item4_game2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/timg2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/homeFragment_item4_game2"
                android:layout_alignParentTop="true"
                android:src="@mipmap/common_icon_mark_vr" />

            <TextView
                android:id="@+id/homeFragment_item4_GameName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/homeFragment_item4_game2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp12"
                android:text="Bullet Sky"
                android:textColor="@color/vr_1a1a1a"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/homeFragment_item4_download2"

                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp22"
                android:layout_below="@+id/homeFragment_item4_GameName2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp8"
                android:background="@drawable/live_red_shape"
                android:gravity="center"
                android:text="下载"
                android:textColor="@color/vr_ff5858"
                android:textSize="@dimen/sp12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/homeFragment_item4_layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/homeFragment_item4_game3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/timg3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/homeFragment_item4_game3"
                android:layout_alignParentTop="true"
                android:src="@mipmap/common_icon_mark_vr" />

            <TextView
                android:id="@+id/homeFragment_item4_GameName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/homeFragment_item4_game3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp12"
                android:text="爆裂赛车"
                android:textColor="@color/vr_1a1a1a"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/homeFragment_item4_download3"

                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp22"
                android:layout_below="@+id/homeFragment_item4_GameName3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp8"
                android:background="@drawable/live_red_shape"
                android:gravity="center"
                android:text="下载"
                android:textColor="@color/vr_ff5858"
                android:textSize="@dimen/sp12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/homeFragment_item4_layout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/homeFragment_item4_game4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/timg4" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/homeFragment_item4_game4"
                android:layout_alignParentTop="true"
                android:src="@mipmap/common_icon_mark_vr" />

            <TextView
                android:id="@+id/homeFragment_item4_GameName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/homeFragment_item4_game4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp12"
                android:text="仙境弹珠"
                android:textColor="@color/vr_1a1a1a"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/homeFragment_item4_download4"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp22"
                android:layout_below="@+id/homeFragment_item4_GameName4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp8"
                android:background="@drawable/live_red_shape"
                android:gravity="center"
                android:text="下载"
                android:textColor="@color/vr_ff5858"
                android:textSize="@dimen/sp12" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>