<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:id="@+id/movie_view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/vr_bg" />
    <RelativeLayout
        android:id="@+id/movieFragment_item1_Layout"
        android:layout_below="@+id/movie_view"
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <View
            android:id="@+id/movieFragment_item1_View"
            android:layout_width="4dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:background="@color/vr_f44336" />

        <TextView
            android:id="@+id/movieFragment_item1_text"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignLeft="@+id/movieFragment_item1_View"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text="热播推荐"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/movieFragment_item1_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:drawableRight="@mipmap/common_icon_right"
            android:gravity="center"
            android:text="更多"
            android:textColor="@color/vr_8888"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/movieFragment_item1_Layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieFragment_item1_Layout"
        android:orientation="horizontal">

        <include
            android:id="@+id/movieFragment_include1"
            layout="@layout/item_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"

            android:background="@color/white" />

        <include
            android:id="@+id/movieFragment_include2"
            layout="@layout/item_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/movieFragment_item1_Layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieFragment_item1_Layout2"
        android:orientation="horizontal">

        <include
            android:id="@+id/movieFragment_include3"
            layout="@layout/item_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <include
            android:id="@+id/movieFragment_include4"
            layout="@layout/item_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>