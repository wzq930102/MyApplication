<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/vr_red"/>

    <include
        android:id="@+id/movieFragment_title"
        layout="@layout/vrtv_title" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/movie_fragment_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        tl:tl_indicator_color="@color/vr_red"
        tl:tl_indicator_corner_radius="1.5dp"
        tl:tl_indicator_height="@dimen/dp3"
        tl:tl_indicator_width="@dimen/dp30"
        tl:tl_textSelectColor="@color/vr_red"
        tl:tl_textUnselectColor="@color/black" />

    <android.support.v4.view.ViewPager
        android:id="@+id/movie_fragment_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>