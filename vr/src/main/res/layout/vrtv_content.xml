<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp36">

    <View
        android:id="@+id/vr_tv_view"
        android:layout_width="@dimen/dp4"
        android:layout_height="@dimen/dp14"
        android:layout_centerVertical="true"
        android:background="@color/vr_f44336" />

    <TextView
        android:id="@+id/vr_tv_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp36"
        android:layout_alignLeft="@+id/vr_tv_view"
        android:layout_marginLeft="@dimen/dp12"
        android:gravity="center"
        android:textColor="@color/vr_black"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/vr_tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp8"
        android:drawableRight="@mipmap/common_icon_right"
        android:gravity="center"
        android:text="更多"
        android:textColor="@color/vr_8888"
        android:textSize="@dimen/sp13" />
</RelativeLayout>