<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jtvr.avtivity.MyFragmentToActivity.LoginActivity">

    <include layout="@layout/login_register_title" />

    <RelativeLayout
        android:id="@+id/login_parent1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp36"
        android:layout_marginLeft="@dimen/dp36"
        android:layout_marginRight="@dimen/dp36"
        android:layout_marginTop="@dimen/dp36"
        android:background="@drawable/shape_corner">

        <ImageView
            android:id="@+id/login_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp15"
            android:src="@mipmap/login_icon_username" />

        <EditText
            android:id="@+id/login_edit_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/login_username"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入手机号/会员号"
            android:maxLength="11"
            android:paddingBottom="@dimen/dp2"
            android:paddingTop="@dimen/dp2"
            android:singleLine="true"
            android:textColor="@color/vr_797979"
            android:textColorHint="@color/vr_bbbbbb"
            android:textSize="@dimen/sp14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_parent2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp36"
        android:layout_marginLeft="@dimen/dp36"
        android:layout_marginRight="@dimen/dp36"
        android:layout_marginTop="@dimen/dp36"
        android:background="@drawable/shape_corner">

        <ImageView
            android:id="@+id/login_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp15"
            android:src="@mipmap/login_icon_password" />

        <EditText
            android:id="@+id/login_edit_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/login_password"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/dp2"
            android:paddingTop="@dimen/dp2"
            android:textColor="@color/vr_797979"
            android:textColorHint="@color/vr_bbbbbb"
            android:textSize="@dimen/sp14" />
    </RelativeLayout>

    <TextView
        android:id="@+id/login_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp36"
        android:layout_marginTop="@dimen/dp16"
        android:paddingBottom="@dimen/dp4"
        android:paddingLeft="@dimen/dp8"
        android:paddingTop="@dimen/dp4"
        android:text="忘记密码？"
        android:textColor="@color/vr_797979"
        android:textSize="@dimen/sp12" />

    <Button
        android:id="@+id/login_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp36"
        android:layout_marginRight="@dimen/dp36"
        android:layout_marginTop="72dp"
        android:background="@color/vr_red"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14" />
</LinearLayout>
